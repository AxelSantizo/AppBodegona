<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBodegona.Views.Familias"
             Title="Modificacion de Familias"
             BackgroundColor="#2B2B2B">
    <ContentPage.Content>
        <ContentView x:Name="MainContentView">
            <StackLayout>
                <StackLayout x:Name="VistaBusqueda" IsVisible="true">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0, 10">
                        <Entry x:Name="nfamilia"
                               Placeholder="Ingrese nombre de familia"
                               TextColor="#fff"
                               PlaceholderColor="#FFF"
                               FontSize="Body"
                               IsVisible="true"
                               Completed="Buscar_Clicked"
                               Focused="Button_Focused"
                               WidthRequest="250"
                               HorizontalOptions="Start"
                               TextChanged="Reset_TextChanged"/>

                        <Entry x:Name="cfamilia"
                               Placeholder="Ingrese codigo de familia"
                               TextColor="#fff"
                               PlaceholderColor="#FFF"
                               Keyboard="Numeric"
                               FontSize="Body"
                               Completed="Buscar_Clicked"
                               IsVisible="false"
                               Focused="Button_Focused"
                               WidthRequest="250"
                               HorizontalOptions="Start"
                               TextChanged="Reset_TextChanged"
                               MaxLength="4"/>

                        <Button x:Name="Cambio"
                                FontFamily="MaterialIcons-Regular"
                                Text="&#xea37;"
                                WidthRequest="45"
                                TextColor="#FFF"
                                FontSize="Title"
                                CornerRadius="8"
                                BackgroundColor="#00A6BD"
                                HorizontalOptions="End"
                                Clicked="Cambio_Clicked"/>

                        <Button x:Name="Limpiar"
                                FontFamily="MaterialIcons-Regular"
                                CornerRadius="8"
                                Text="&#xe872;"
                                WidthRequest="40"
                                TextColor="#FFF"
                                BackgroundColor="#DF3068"
                                FontSize="Title"
                                HorizontalOptions="End"
                                Clicked="Limpiar_Clicked"/>
                    </StackLayout>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                    <Frame HasShadow="False"
                           BackgroundColor="#00A6BD"
                           Padding="10"
                           CornerRadius="8"
                           Grid.Column="0"
                           Margin="10,0,10,0" >
                           <StackLayout Orientation="Horizontal"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Spacing="10">
                           <Label Text="Ver todas las familias"
                                  FontSize="16"
                                  TextColor="White"
                                  VerticalTextAlignment="Center"/>
                           <Label Text="&#xe8f4;" 
                               FontFamily="MaterialIcons-Regular"
                               FontSize="25"
                               TextColor="White"/>
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Todo_Clicked"/>
                        </Frame.GestureRecognizers>
                    </Frame>

                    <StackLayout>
                        <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                        <StackLayout Orientation="Horizontal" Padding="15,0">
                            <Label Text="Codigo" 
                               TextColor="White"
                               VerticalTextAlignment="Center"
                               WidthRequest="70"/>

                            <Label Text="Descripción" 
                               VerticalTextAlignment="Center"
                               TextColor="White"
                               WidthRequest="290"/>

                        </StackLayout>
                        <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                        <ListView x:Name="ResultadosListView" HasUnevenRows="True" IsVisible="false" ItemSelected="ListView_ItemSelectedFalse">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout>
                                            <StackLayout Orientation="Horizontal" Padding="15,0">
                                                <Label Text="{Binding Codigo}" 
                                                       VerticalTextAlignment="Center"
                                                       HorizontalTextAlignment="Center"
                                                       FontSize="Caption"
                                                       TextColor="White"
                                                       WidthRequest="70"/>

                                                <Label Text="{Binding Nombre}" 
                                                       VerticalTextAlignment="Center"
                                                       TextColor="White"
                                                       FontSize="Caption"
                                                       WidthRequest="250"/>

                                                <Button x:Name="EditarF"
                                                        FontFamily="MaterialIcons-Regular"
                                                        Text="&#xe3c9;"
                                                        FontSize="Small"
                                                        CornerRadius="8"
                                                        TextColor="#FFF"
                                                        BackgroundColor="#00A6BD"
                                                        HorizontalOptions="Center" 
                                                        VerticalOptions="Center" 
                                                        HeightRequest="35"
                                                        WidthRequest="45"
                                                        Clicked="EditarF_Clicked"/>
                                            </StackLayout>
                                            <BoxView x:Name="Division" HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </StackLayout>

                <StackLayout x:Name ="VistaFamilia" IsVisible="false" Margin="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Text="Codigo de Familia:" Grid.Column="0" Grid.Row="0" FontSize="Body" VerticalOptions="Center" TextColor="#FFF"/>
                        <Entry x:Name="codigof"
                               TextColor="#fff"
                               PlaceholderColor="#FFF"
                               Grid.Column="1"
                               Grid.Row="0"
                               IsReadOnly="True"
                               FontSize="Body"/>

                        <Label Text="Descripcion Familia:" Grid.Column="0" Grid.Row="1" FontSize="Body" VerticalOptions="Center" TextColor="#FFF"/>
                        <Entry x:Name="descf"
                               TextColor="#fff"
                               PlaceholderColor="#FFF"
                               Grid.Column="1"
                               Grid.Row="1"
                               IsReadOnly="True"
                               FontSize="Body"/>
                    </Grid>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="-20,0"/>
                    <StackLayout Orientation="Horizontal" Padding="5,0" Margin="-20,0">
                        <Label Text="UPC" 
                           TextColor="White"
                           VerticalTextAlignment="Center"
                           FontSize="Small"
                           WidthRequest="110"/>

                        <Label Text="Descripcion" 
                           VerticalTextAlignment="Center"
                           FontSize="Small"
                           TextColor="White"
                           WidthRequest="180"/>

                        <Label Text="Costo" 
                           VerticalTextAlignment="Center"
                           FontSize="Small"
                           TextColor="White"
                           WidthRequest="120"/>
                    </StackLayout>

                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="-20,0"/>

                    <ListView x:Name="FamiliaListView" HasUnevenRows="True" IsVisible="true" Margin="-20,0" ItemSelected="ListView_ItemSelectedFalse">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal" Padding="5,0">
                                            <Label Text="{Binding Upc}" 
                                                   VerticalTextAlignment="Center"
                                                   HorizontalTextAlignment="Center"
                                                   TextColor="White"
                                                   FontSize="Caption"
                                                   WidthRequest="110"/>

                                            <Label Text="{Binding DescLarga}" 
                                                   VerticalTextAlignment="Center"
                                                   TextColor="White"
                                                   FontSize="Caption"
                                                   WidthRequest="180"/>

                                            <Label Text="{Binding Costo}" 
                                                   VerticalTextAlignment="Center"
                                                   TextColor="White"
                                                   WidthRequest="60"/>

                                            <Button x:Name="EliminarF"
                                                    FontFamily="MaterialIcons-Regular"
                                                    Text="&#xe644;"
                                                    FontSize="Body"
                                                    HeightRequest="35"    
                                                    TextColor="#FFF"
                                                    BackgroundColor="#00A6BD"
                                                    HorizontalOptions="Center" 
                                                    VerticalOptions="Center" 
                                                    WidthRequest="40"
                                                    Clicked="EliminarF_Clicked"/>
                                        </StackLayout>
                                        <BoxView x:Name="Division" HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Grid Margin="0,0,0,0">
                        <Frame x:Name="Agregar"
                               HasShadow="False"
                               BackgroundColor="#00A6BD"
                               Padding="10"
                               CornerRadius="8"
                               WidthRequest="50"
                               Grid.Column="0">
                               <StackLayout Orientation="Horizontal"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center">
                               <Label Text="Agregar"
                                      FontSize="16"
                                      TextColor="White"
                                      VerticalTextAlignment="Center"/>
                               <Label Text="&#xe02e;" 
                                      FontFamily="MaterialIcons-Regular"
                                      FontSize="25"
                                      TextColor="White"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Agregar_Clicked"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                        <Frame x:Name="Regresar"
                               HasShadow="False"
                               BackgroundColor="#DF3068"
                               Padding="10"
                               CornerRadius="8"
                               Grid.Column="1">
                               <StackLayout Orientation="Horizontal"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center">
                               <Label Text="Regresar"
                                      FontSize="16"
                                      TextColor="White"
                                      VerticalTextAlignment="Center"/>
                                <Label Text="&#xe15e;" 
                                       FontFamily="MaterialIcons-Regular"
                                       FontSize="25"
                                       TextColor="White"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Regresar_Clicked"/>
                            </Frame.GestureRecognizers>
                        </Frame>

                    </Grid>
                </StackLayout>

                <StackLayout x:Name="VistaAgregarProducto" IsVisible="false">
                    <Frame x:Name="Volver"
                           HasShadow="False" 
                           BackgroundColor="#DF3068"
                           Padding="8"
                           Grid.Column="0">
                        <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="10">
                            <Label Text="Regresar a la familia"
                               FontSize="16"
                               TextColor="White"
                               VerticalTextAlignment="Center"/>
                            <Label Text="&#xe166;" 
                               FontFamily="MaterialIcons-Regular"
                               FontSize="30"
                               TextColor="White"/>
                        </StackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="Volver_Clicked"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" />
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0, 10">

                        <Entry x:Name="descproduc"
                               Placeholder="Ingrese la descripcion"
                               Completed="BuscarProduc_Clicked"
                               TextColor="#FFF"
                               PlaceholderColor="#FFF"
                               IsVisible="true"
                               FontSize="Body"
                               Focused="Button_Focused"
                               WidthRequest="200"
                               HorizontalOptions="Start"
                               TextChanged="Reset_TextChanged"/>

                        <Entry x:Name="upcproduc"
                               Placeholder="UPC (Barra Producto)"
                               TextColor="#FFF"
                               PlaceholderColor="#FFF"
                               Keyboard="Numeric"
                               IsVisible="false"
                               Completed="BuscarProduc_Clicked"
                               Grid.Column="0"
                               FontSize="Body"
                               Focused="Button_Focused"
                               WidthRequest="200"
                               HorizontalOptions="Start"
                               TextChanged="Reset_TextChanged"
                               MaxLength="14"/>

                        <Button x:Name="Cambio1"
                                FontFamily="MaterialIcons-Regular"
                                Text="&#xea37;"
                                WidthRequest="45"
                                TextColor="#FFF"
                                FontSize="Title"
                                CornerRadius="8"
                                BackgroundColor="#00A6BD"
                                Grid.Column="1"
                                HorizontalOptions="End"
                                Clicked="CambioTextProduc_Clicked"/>

                        <Button x:Name="EscanearProducto"
                                FontFamily="MaterialIcons-Regular"
                                Text="&#xe412;"
                                TextColor="#FFF"
                                BackgroundColor="#00A6BD"
                                WidthRequest="45"
                                HeightRequest="50"
                                CornerRadius="8"
                                Grid.Column="2"
                                FontSize="Title" 
                                HorizontalOptions="End"
                                Clicked="EscanearProducto_Clicked"/>

                        <Button FontFamily="MaterialIcons-Regular"
                                CornerRadius="8"
                                Text="&#xe872;"
                                WidthRequest="40"
                                TextColor="#FFF"
                                BackgroundColor="#DF3068"
                                FontSize="Large"
                                HorizontalOptions="End"
                                Clicked="LimpiarProduc_Clicked"/>
                    </StackLayout>
                    <StackLayout>
                        <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                        <StackLayout Orientation="Horizontal" Padding="5,0">
                            <Label Text="UPC" 
                               TextColor="White"
                               Grid.Column="0"
                               VerticalTextAlignment="Center"
                               WidthRequest="110"/>

                            <Label Text="Descripción" 
                               VerticalTextAlignment="Center"
                               TextColor="White"
                               Grid.Column="1"
                               WidthRequest="120"/>

                            <Label Text="Existencia" 
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="White"
                               Grid.Column="2"
                               WidthRequest="200"/>

                        </StackLayout>
                        <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                        <ListView x:Name="ProductoListView" HasUnevenRows="True" IsVisible="true" ItemSelected="ListView_ItemSelectedFalse">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout>
                                            <StackLayout Orientation="Horizontal" Padding="5,0">
                                                <Label Text="{Binding Upc}" 
                                                       VerticalTextAlignment="Center"
                                                       TextColor="White"
                                                       FontSize="Caption"
                                                       WidthRequest="110"/>

                                                <Label Text="{Binding DescLarga}" 
                                                       VerticalTextAlignment="Center"
                                                       TextColor="White"
                                                       FontSize="Caption"
                                                       WidthRequest="180"/>

                                                <Label Text="{Binding Existencia}" 
                                                       VerticalTextAlignment="Center"
                                                       HorizontalTextAlignment="Center" 
                                                       TextColor="White"
                                                       FontSize="Caption"
                                                       WidthRequest="60"/>

                                                <Button FontFamily="MaterialIcons-Regular"
                                                        Text="&#xe147;"
                                                        FontSize="Medium"
                                                        HeightRequest="40"
                                                        TextColor="#FFF"
                                                        BackgroundColor="#00A6BD"
                                                        HorizontalOptions="Center" 
                                                        VerticalOptions="Center" 
                                                        WidthRequest="40"
                                                        CornerRadius="8"
                                                        Clicked="AgregarFamilia_Clicked"/>

                                            </StackLayout>
                                            <BoxView HeightRequest="1" Color="White" HorizontalOptions="FillAndExpand" Margin="0,0,0,0"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </StackLayout>
                <StackLayout IsVisible="True">
                    <Image x:Name="Img" HorizontalOptions="CenterAndExpand"  VerticalOptions="CenterAndExpand" Margin="0,150"/>
                </StackLayout>
            </StackLayout>
        </ContentView>
    </ContentPage.Content>
</ContentPage>